<?import javafx.scene.layout.VBox?>

<HBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="800.0" stylesheets="@Emo.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chaossweeper.DifficultyController">
    <children>
        <VBox alignment="TOP_CENTER" centerShape="false" prefHeight="1000.0" prefWidth="800.0" spacing="60.0">
            <children>
                <Label alignment="TOP_CENTER" contentDisplay="TOP" prefHeight="114.0" prefWidth="785.0" text="Select Difficulty">
                    <font>
                        <Font name="Corbel Light" size="78.0" />
                    </font>
                </Label>
                <Button fx:id="easyButton" alignment="CENTER" contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#setDifficultyEasy" prefHeight="60.0" prefWidth="170.0" styleClass="menu-button" text="Easy" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                    </cursor>
                </Button>
                <Button fx:id="normalButton" alignment="CENTER" contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#setDifficultyNormal" prefHeight="60.0" prefWidth="170.0" styleClass="menu-button" text="Normal" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                    </cursor>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Button fx:id="hardButton" alignment="CENTER" contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#setDifficultyHard" prefHeight="60.0" prefWidth="170.0" styleClass="menu-button" text="Hard" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                    </cursor>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
                <Region prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                <Button fx:id="menuButton" alignment="CENTER" contentDisplay="TOP" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#goToMenu" prefHeight="60.0" prefWidth="170.0" styleClass="menu-button" text="Menu" textFill="WHITE">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND" />
                    </cursor>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="80.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</HBox>
